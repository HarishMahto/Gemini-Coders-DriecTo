<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vertex AI License Plate Recognition Test"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/testImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:background="@drawable/rounded_edittext"
        android:layout_marginBottom="16dp"
        android:src="@drawable/city_map" />

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select an image to test license plate recognition"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:background="@drawable/rounded_edittext"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/selectImageButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Image"
        android:layout_marginBottom="8dp"
        android:background="@drawable/gradient_background"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/testApiKeyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test with API Key"
        android:layout_marginBottom="8dp"
        android:background="@drawable/gradient_background"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/testBackendButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test with Backend"
        android:layout_marginBottom="16dp"
        android:background="@drawable/gradient_background"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back to License Plate Activity"
        android:background="@drawable/gradient_background"
        android:textColor="@color/white" />

</LinearLayout> 